<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.galaxyNstudio.veggies.OtpActivity">

    <TextView
        android:id="@+id/heading"
        android:textAlignment="center"
        android:text="VERIFY DETAILS"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:layout_below="@+id/heading"
        android:id="@+id/otpLabel"
        android:text="OTP sent to "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearOtp"
        android:layout_centerInParent="true"
        android:padding="30dp"
        android:layout_below="@+id/otpLabel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:singleLine="true"
            android:id="@+id/otp_1"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:id="@+id/otp_2"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:id="@+id/otp_3"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:id="@+id/otp_4"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:id="@+id/otp_5"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:id="@+id/otp_6"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:visibility="gone"
        android:background="#000000"
        android:textColor="#fff"
        android:enabled="false"
        android:text="resend otp"
        android:layout_marginLeft="270dp"
        android:id="@+id/resendOtpButton"
        android:layout_below="@id/linearOtp"
        android:layout_width="120dp"
        android:layout_height="35dp" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resendOtpButton"
        android:enabled="true"
        android:id="@+id/verifyOtpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:foreground="?attr/selectableItemBackground"
        android:text="VERIFY OTP AND PROCEED"
        android:textColor="#fff"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>


